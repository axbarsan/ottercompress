{
  "name": "ottercompress",
  "version": "1.0.0",
  "author": "axbarsan",
  "copyright": "(C) 2019 axbarsan. All rights reserver.",
  "main": "dist/main.js",
  "description": "Just an otter compressing some images",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "prestart": "tsc",
    "start": "electron --inspect=9229 ./dist/main.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "asar": "^1.0.0",
    "sharp": "^0.21.3"
  },
  "build": {
    "directories": {
      "output": "./build"
    },
    "productName": "ottercompress",
    "appId": "com.electron.ottercompress",
    "files": [
      "**/*"
    ],
    "mac": {
      "artifactName": "${productName}-${version}-osx.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ]
    }
  }
}
